<Window x:Class="Touch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#FF124C7A"
        Title="Touch sample">

  <Viewbox>
    <Canvas x:Name="root" Width="1000" Height="1000">
      <Rectangle Fill="DodgerBlue" StrokeThickness="2" Width="400" Height="400" RenderTransform="1 0 0 1 50 50" IsManipulationEnabled="True"/>
      <Rectangle Fill="Blue" StrokeThickness="2" Width="400" Height="400" RenderTransform="1 0 0 1 550 50" IsManipulationEnabled="True"/>
      <Rectangle Fill="Yellow" StrokeThickness="2" Width="400" Height="400" RenderTransform="1 0 0 1 550 550" IsManipulationEnabled="True"/>
      <Rectangle Fill="Gold" StrokeThickness="2" Width="400" Height="400" RenderTransform="1 0 0 1 50 550" IsManipulationEnabled="True"/>
    </Canvas>
  </Viewbox>

</Window>
